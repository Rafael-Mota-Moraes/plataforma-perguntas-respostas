<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="container">
  <div class="my-5">
    <h1><%= pergunta.titulo %></h1>
    <hr>
    <p><%= pergunta.descricao %></p>
  </div>
  <form method="post" action="/responder" >
    <label for="resposta" class="h3">Responda</label>
    <textarea id="resposta" placeholder="Sua resposta: " class="form-control my-4" name="corpo"></textarea>
    <input type="hidden" name="pergunta" value="<%= pergunta.id %>" >
    <button class="btn btn-primary">Responder</button>
  </form>

  <div class="my-3">
    <h3>Respostas</h3>
  </div>

  <% respostas.forEach((resposta) => { %>
    <div class="card my-2">
      <div class="card-body">
        <p><%= resposta.corpo %></p>
      </div>
    </div>
  <% }) %>


</div>

<%- include('partials/foot') %>